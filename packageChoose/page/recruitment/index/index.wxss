page {
    background: #f2f2f2;
}

swiper {
    height: 400rpx;
    width: 100%;
}

swiper image {
    width: 100%;
    height: 400rpx;
}

.slide-image {
    height: 400rpx;
    width: 100%;
}

.background {
    background: #22d9d9;
    padding: 10rpx 0 20rpx;
}

.search {
    width: 90vw;
    margin: 0 5vw;
    height: 66rpx;
    border: #fff 1px solid;
    border-radius: 55rpx;
    line-height: 66rpx;
    position: relative;
}

.s_text {
    float: left;
    text-align: left;
    color: #fff;
    padding: 0 25rpx;
    width: 80%;
    height: 100%;
    border: none;
    font-size: 30rpx;
}

.s_btn {
    position: absolute;
    width: 13%;
    height: 100%;
    border: none;
    color: #fff;
    font-size: 52rpx;
    line-height: 1.2;
    /* color: #fff; */
    text-align: right;
    right: 0;
    background: none;
    padding-right: 20rpx;
}

/*头条*/

.notice {
    width: 630rpx;
    height: 50rpx;
    margin: 0 auto;
    display: flex;
    padding: 15rpx 20rpx;
    box-shadow: 0px 0px 20px 0px rgba(107, 136, 245, 0.26);
    border-radius: 0 0 20rpx 20rpx;
    background: #fff;
}

.noticeBanner {
    width: 600rpx;
    height: 50rpx;
}

.notice-logo {
    width: 50rpx;
    height: 50rpx;
    margin: auto 0;
}

.notice-item {
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 20rpx;
    font-size: 24rpx;
}

/*导航菜单模块*/

.nav {
    position: relative;
    font-family: PingFang-SC-Regular;
    font-size: 27rpx;
    color: #808080;
    width: 90vw;
    margin: 0 5vw;
    margin-top: 0rpx;
    height: 7vw;
    border-radius: 10px;
    padding-top: 10px;
}

.nav-item {
    display: flex;
    justify-content: space-around;
    position: absolute;
    text-align: center;
    width: 90vw;
}

.nav-active {
    color: #383838;
    font-weight: 600;
}

/* 政策课堂 */

.classroom {
    width: 100vw;
    /* height: 100rpx; */
    background: #fff;
    margin-top: 20rpx;
    display: flex;
    color: #383838;
    position: relative;
    align-items: center;
}

.sign {
    width: 10rpx;
    height: 70rpx;
    margin-left: 20rpx;
    background: #22d9d9;
}

.class-title {
    font-weight: 600;
    font-size: 34rpx;
    line-height: 100rpx;
    margin-left: 20rpx;
}

.class-detail {
    line-height: 30px;
    background: #f2f2f2;
    color: #9b9b9b;
    font-size: 28rpx;
    padding-left: 25rpx;
    padding-top: 20rpx;
}

.icon {
    /* font-size: 60rpx; */
    position: absolute;
    top: 0;
    right: 20rpx;
}

.icon-class {
    font-size: 60rpx;
    position: absolute;
    top: 0;
    right: 20rpx;
}

/* 学校列表 */

.school {
    display: flex;
    flex-wrap: wrap;
    width: 100vw;
    margin-bottom: 40rpx;
}

.school-item {
    width: 30vw;
    margin-left: 2.5vw;
    margin-top: 40rpx;
}

.school-img {
    width: 28vw;
    margin: 0 auto;
    height: 270rpx;
    border-radius: 2rpx;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

.school image {
    width: 100%;
    height: 100%;
    border-radius: 2rpx;
}

.school-info {
    margin-top: 20rpx;
    display: flex;
}

.school-logo {
    width: 49rpx;
    height: 49rpx;
    border-radius: 49rpx;
    margin-top: 12rpx;
    margin-left: 10rpx;
    overflow: hidden;
}

.school-name {
    font-size: 24rpx;
    padding-top: 20rpx;
    overflow: hidden;
    height: 30rpx;
    text-align: center;
}

/*热门专业模块*/

.major {
    margin-top: 50rpx;
    /* width: 90vw;
    margin: 45rpx 5vw; */
}

.major-item {
    font-family: PingFang-SC-Regular;
    background: #fff;
    margin-bottom: 40rpx;
}

.major-title {
    display: flex;
    padding: 20rpx 0;
    align-items: center;
}

.ico {
    width: 7rpx;
    height: 30rpx;
    background: #22d9d9;
    margin-top: 6rpx;
    margin-left: 20rpx;
}

.apply-title {
    margin-left: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #383838;
}

.major-detail {
    font-size: 24rpx;
    font-family: PingFang-SC-Regular;
    color: #5b5b5b;
    line-height: 1.5;
    padding: 0 5rpx 0 5rpx;
    padding-bottom: 39rpx;
    text-align: center;
    /* border-bottom: 1rpx rgb(227, 233, 236) solid; */
}

.major-info {
    display: flex;
    justify-content: space-around;
}

.major-years, .major-salary, .major-top {
    width: 30vw;
    margin: 30rpx 0;
    text-align: center;
    font-size: 24rpx;
    font-family: PingFang-SC-Regular;
}

.data {
    padding-bottom: 20rpx;
}

.cross-line {
    width: 100%;
    margin: 0 auto;
    height: 2rpx;
    background: #e2eaed;
}

.line {
    width: 2rpx;
    height: 40rpx;
    background: #e2eaed;
    margin-top: 50rpx;
    margin-right: 10rpx;
}

/* 报名信息 */

.apply {
    line-height: 80rpx;
    display: flex;
    background: #fff;
    border-bottom: 1px #f2f2f2 solid;
    position: relative;
}

.circle {
    width: 20rpx;
    height: 20rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
    margin-top: 30rpx;
    background: #22d9d9;
}

.apply-title {
    margin-left: 20rpx;
    font-size: 30rpx;
}

.apply-detail {
    font-size: 28rpx;
    color: #989898;
    line-height: 45rpx;
    padding: 20rpx;
}

.calling {
    background: #22d9d9;
    color: #fff;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    font-size: 24rpx;
    margin-left: 20rpx;
}
