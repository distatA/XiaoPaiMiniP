/* pages/examination/subject/subject.wxss */

.contain {
    margin: 30rpx 40rpx;
}

.title {
    font-size: 48rpx;
    font-weight: bold;
}

.info {
    font-size: 24rpx;
    line-height: 72rpx;
    letter-spacing: 1rpx;
    color: #adadad;
    margin-bottom: 20rpx;
}

/* 学科 */

.subject {
    display: flex;
    flex-wrap: wrap;
    margin-top: 26rpx;
    margin-bottom: 27rpx;
}

.subject-title {
    font-size: 32rpx;
}

.subject-title text {
    font-size: 24rpx;
    color: #adadad;
    margin-left: 10rpx;
}

.item {
    text-align: center;
    width: 198rpx;
    height: 92rpx;
    line-height: 92rpx;
    background-color: #f8f9fd;
    border-radius: 46rpx;
    font-size: 30rpx;
    color: #8c8c8d;
    margin-bottom: 30rpx;
    margin-right: 25rpx;
}

.active {
    background-color: #ccf6ec;
    color: #00d69c;
}

.formulate {
    width: 710rpx;
    height: 118rpx;
    background-image: linear-gradient(45deg, #18dbb4 0%, #44e1fe 100%);
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.2);
    margin: 0 auto;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 118rpx;
    color: #fff;
    position: fixed;
    bottom: 71rpx;
    left: 20rpx;
}
