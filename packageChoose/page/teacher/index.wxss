.container-box {
    background-image: url('https://live.720pai.cn/static/bg.png');
    background-color: #333;
    background-repeat: no-repeat;
    background-size: cover;
    height: 100vh;
    width: 100vw;
}

#pusher {
    width: 750rpx;
    height: 100vh;
    position: relative;
}

.game-over {
    position: absolute;
    width: 280rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #22d8d9;
    text-align: center;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #fff;
    bottom: 30rpx;
    margin: 0 auto;
    left: 30rpx;
}

.change-wenda {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 40rpx;
    bottom: 30rpx;
    margin: 0 auto;
    right: 130rpx;
    background-color: #22d8d9;
    padding: 20rpx;
}

.change-wenda cover-image {
    width: 100%;
    height: 100%;
}

.change-camera {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    bottom: 30rpx;
    margin: 0 auto;
    right: 30rpx;
    background-color: #22d8d9;
}
