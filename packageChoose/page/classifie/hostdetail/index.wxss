/* pages/hostdetail/hostdetail.wxss */
.name{
  overflow: hidden;
}
.hostDetail {
    width: 100%;
    background: #f2f2f2;
}
.vr{
    position: relative;
}
.panorama{
    position: absolute;
    width: 200rpx;
    line-height: 40rpx;
    text-align: center;
    opacity: 0.5;
    left: 0;
    bottom: 10rpx;
}
.header {
    width: 100%;
    height: 424rpx;
    background: #ccc;
}

.nav {
    width: 100%;
    height: 253rpx;
    display: flex;
    box-sizing: border-box;
    padding: 60rpx 38rpx;
    justify-content: space-around;
    text-align: center;
    background: #fff;
}

.nav-box {
    font-size: 26rpx;
}

.color {
    width: 100%;
    height: 10rpx;
    background: #f2f2f2;
}

.image {
    width: 88rpx;
    height: 88rpx;
}

.content {
    background: #fff;
}

.con-header {
    width: 100%;
    padding: 40rpx 30rpx;
    display: flex;
    justify-content: space-around;
    box-sizing: border-box;
}

.school-name {
    width: 420rpx;
    font-weight: bold;
    font-size: 36rpx;
    margin-top: 10rpx;
}

.school-introduce {
    line-height: 50rpx;
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: #a9a9a9;
}

.logo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
}

.popularity {
    width: 140rpx;
    color: #ffbb29;
    line-height: 80rpx;
    font-size: 28rpx;
}

.student-num {
    height: 128rpx;
    box-sizing: border-box;
    padding: 20rpx 50rpx;
    display: flex;
    justify-content: space-between;
}

._one:last-child {
    background: #ffbb29;
}

.num-con {
    display: flex;
    justify-content: space-around;
    border-top: 1px solid transparent;
}

._two {
    background: #5cd7ad;
}

._three {
    background: #22d8d9;
    font-size: 14rpx;
    word-wrap: break-word;
}

.public-type {
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
    margin-top: 8rpx;
    margin-right: 20rpx;
    color: #fff;
    word-wrap: break-word;
    font-size: 24rpx;
    box-sizing: border-box;
}

.num-public1 {
    background: #fe7666;
    line-height: 60rpx;
}

.num-public2 {
    background: #5cd7ad;
    line-height: 60rpx;
}

.num-public3 {
    font-size: 22rpx;
    word-wrap: break-word;
    background: #22d8d9;
}

.num-title {
    font-size: 34rpx;
    font-weight: bold;
}

._num {
    font-size: 26rpx;
    color: #a9a9a9;
}

.big-content {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    position: relative;
}

.padding {
    width: 50rpx;
    display: inline;
}

.all-con {
    z-index: 10;
  position: absolute;
  font-size: 30rpx;
  color: #fe7666;
  bottom: -4rpx;
  right: 30rpx;
  font-weight: bold;
  width: 100rpx;
  height: 44rpx;
  background: #fff;
  text-align: center;
}

._content {
    width: 100%;
    /* height: 128rpx; *//* border: 1px solid #ccc; */
    display: -webkit-box;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
}

.scroll-view {
    width: 250%;
    height: 266rpx;
    padding: 43rpx 30rpx;
    display: flex;
}

.swiper-item {
    width: 260rpx;
    height: 179rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
    border: 1px solid #ccc;
}
.swiper-item image{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.rules-header {
    display: flex;
    justify-content: space-between;
    line-height: 102rpx;
    padding: 0 30rpx;
}

.rules-title {
    font-size: 36rpx;
    font-weight: bold;
}

.rules-all {
    font-size: 26rpx;
    color: #a9a9a9;
}

.arrow {
    position: absolute;
    right: 20rpx;
    top: 0;
    bottom: 0;
    margin: auto 0;
    width: 14rpx;
    height: 14rpx;
    border-top: 5rpx solid gainsboro;
    border-right: 5rpx solid gainsboro;
    transform: rotate(45deg);
}
.arrow1 {
    position: absolute;
    right: 20rpx;
    top: 0;
    bottom: 0;
    margin: auto 0;
    width: 14rpx;
    height: 14rpx;
    border-top: 5rpx solid gainsboro;
    border-right: 5rpx solid gainsboro;
    transform: rotate(135deg);
}
.rules-con {
    display: flex;
    justify-content: space-between;
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #ccc;
    box-sizing: border-box;
    padding: 0 30rpx;
    font-size: 30rpx;
}

.show {
    background: #f2f2f2;
    font-size: 28rpx;
}

.bank-con {
    /* height: 90rpx; */
    border-bottom: 1px solid #ccc;
    padding: 24rpx 30rpx;
    box-sizing: border-box;
}

.subject {
    width: 70rpx;
    height: 32rpx;
    border-radius: 2rpx 10rpx 2rpx 10rpx;
    border: 1px solid #fe7666;
    background: #fed2cd;
    display: inline;
    font-size: 26rpx;
}

.sub-con {
    display: inline;
    font-size: 30rpx;
}

.bottom {
    display: flex;
    justify-content: space-around;
    height: 99rpx;
    font-size: 32rpx;
    box-sizing: border-box;
    padding-top: 20rpx;
}

button {
    background: #fff !important;
    display: flex !important;
    justify-content: center !important;
    line-height: 40rpx;
    width: 200rpx;
}

.share {
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.share-img {
    width: 44rpx;
    height: 44rpx;
    display: inline;
    margin-right: 10rpx;
}

.cell {
    position: absolute;
    /* right: 162rpx; */
    left: 10rpx;
    top: 0rpx;
    font-size: 50rpx;
}

.celled {
    color: #e5b626;
}

.font_family {
    font-family: "font_family" !important;
    font-size: 30px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    padding: 0;
}

._noPost {
    text-align: center;
    position: relative;
}

.no-data {
    width: 200rpx;
    height: 230rpx;
    position: absolute;
    top: 350rpx;
    left: 0;
    right: 0;
    margin: auto;
}
/* 群聊 */
.service {
    width: 80rpx;
    height: 80rpx;
    position: fixed;
    right: 10rpx;
    top: 76vw;
    background: url("https://new.schoolpi.net/attach/small_program/group/ims-btn.png");
    background-size: 100%;
    z-index: 999;
    box-shadow: 0 0 15rpx 5rpx rgba(85,85,85,0.2);
