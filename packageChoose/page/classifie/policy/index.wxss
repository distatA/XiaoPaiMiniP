page {
    background: #f2f2f2;
}

.menu {
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-around;
    background: #22d8d9;
    color: #fff;
    font-size: 28rpx;
}
.choose{
     height: 126rpx;
    display: flex;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 26rpx 0;
    background: #fff;
}
.menu-item-on {
    font-size: 36rpx;
}

.list {
    padding: 30rpx 40rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    color: #383838;
    border-bottom: 1rpx solid #ccc;
    position: relative;
    font-size: 30rpx;
}

.list:last-child {
    border: none;
}
.list-name{
    font-size: 30rpx;
}
.arrow {
    position: absolute;
    right: 30rpx;
    top: 0;
    bottom: 0;
    margin: auto 0;
    width: 14rpx;
    height: 14rpx;
    border-top: 5rpx solid gainsboro;
    border-right: 5rpx solid gainsboro;
    transform: rotate(45deg);
}

.container {
    background: #fff;
    padding-top: 70rpx;
}

.step-title {
    width: 600rpx;
    text-align: center;
    margin: 0rpx auto 100rpx auto;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #22d8d9;
    color: #fff;
    font-size: 34rpx;
    border-radius: 40rpx;
}

.step-container {
    display: flex;
    margin: 0 30rpx;
}

.step {
    width: 100rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.step-circle {
    position: relative;
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    margin: 0 auto;
    font-size: 40rpx;
    background-color: #d3f7f7;
    color: #fff;
    border-radius: 50%;
}

.step-inner-circle {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    text-align: center;
    margin: auto auto;
    line-height: 40rpx;
    border-radius: 50%;
    background-color: #22d8d9;
}
.none{
    display: none;
}
.step-line{
    flex: 1;
    width: 4rpx;
    margin: 0 auto;
    background: #22d8d9;
}

.content {
    flex: 1;
    margin-top: -24rpx;
    box-sizing: border-box;
    width: 580rpx;
}

.step-content {
    padding: 30rpx;
    background: #f2f2f2;
    margin-bottom: 40rpx;
    border-radius: 10rpx;
}

.step-item-title {
    font-size: 34rpx;
    color: #000;
    font-weight: bold;
    padding-bottom: 30rpx;
    border-bottom: solid 2rpx #ccc;
}

.step-item-content {
    padding-top: 30rpx;
    font-size: 28rpx;
}

.jiangsu {
    width: 100%;
    display: flex;
    height: 226rpx;
    justify-content: space-around;
}

.header {
    width: 100%;
    text-align: center;
    line-height: 68rpx;
    background: #22d8d9;
    color: #fff;
    font-size: 28rpx;
    border-radius: 30rpx;
}

.nav-con{
  width: 208rpx;
    height: 68rpx;
    font-size: 28rpx;
    background: #e6e6e6;
    border-radius:30rpx;
    text-align: center;
    line-height: 68rpx; 
}
._noPost{
    text-align: center;
   position: relative;
}
.no-data{
    width: 200rpx;
    height: 230rpx;
    position: absolute;
    top: 350rpx;
    left: 0;
    right: 0;
    margin: auto;
}
