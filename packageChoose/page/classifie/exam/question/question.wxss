page {
    background: #2e5fff;
    position: relative;
}

.main_container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow-x: hidden;
}

.circle {
    width: 100%;
    height: 100%;
    position: absolute;
    top: -50rpx;
    left: 0;
    right: 0;
    z-index: -1;
    transform: scale(1.2);
}

.top_right, .top_left {
    width: 150rpx;
    height: auto;
    position: absolute;
    right: 0;
    top: 0;
}

.top_left {
    left: 0;
}

.bottom_left {
    width: 268rpx;
    height: auto;
    position: absolute;
    left: -100rpx;
    bottom: -50rpx;
    transform: scale(2);
}

.banner_info {
    padding-top: 60rpx;
}

.banner_top {
    width: 567rpx;
    height: auto;
    margin: 30rpx auto 0 auto;
    display: block;
}

.start {
    width: 580rpx;
    height: 130rpx;
    line-height: 130rpx;
    text-align: center;
    font-size: 60rpx;
    font-weight: 550;
    color: #fff;
    background: #6d8df2;
    margin: 100rpx auto 40rpx auto;
    box-shadow: 0rpx 18rpx 40rpx 0rpx rgba(33, 36, 75, 0.16),
                0rpx 0rpx 20rpx 25rpx rgba(125, 146, 238, 0.9) inset;
    border-radius: 65rpx;
}

.tips {
    text-align: center;
    color: #fff;
    font-size: 36rpx;
}

.shadow {
    background: gray;
    opacity: 0.5;
}
