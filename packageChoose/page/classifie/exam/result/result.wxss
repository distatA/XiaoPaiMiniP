.main_container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow-x: hidden;
    padding-top: 80rpx;
}

.circle {
    width: 100%;
    height: 100%;
    position: absolute;
    top: -50rpx;
    left: 0;
    right: 0;
    /* bottom: 0; */
    z-index: -1;
    transform: scale(1.18);
}

.result_img {
    width: 460rpx;
    margin: 0 auto 50rpx auto;
    display: block;
}

.result_img_js {
    width: 586rpx;
    height: 280rpx;
    margin: 0 auto;
    display: block;
}

.result_content_img {
    width: 512rpx;
    height: 400rpx;
    margin: -55rpx auto 0;
    display: block;
}

.download_answer {
    width: 343rpx;
    height: 78rpx;
    background: #6188ff;
    box-shadow: 0rpx 18rpx 40rpx 0rpx rgba(33, 36, 75, 0.16);
    border-radius: 38rpx;
    margin: 240rpx auto 0;
    font-size: 35rpx;
    font-weight: bold;
    text-align: center;
    line-height: 78rpx;
    color: #fff;
}

.dash_board {
    display: flex;
    justify-content: space-around;
    /* color: #fff; */
    text-align: center;
    background: rgba(123, 177, 254, 0.8);
}

.attr {
    line-height: 80rpx;
    color: #fff;
    opacity: 1;
}

.attr view:nth-child(1) {
    font-size: 46rpx;
}

.attr view:nth-child(2) {
    font-size: 28rpx;
}

.question_list {
    width: 600rpx;
    margin: 30rpx auto;
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
}

.question_item {
    width: 50rpx;
    height: 50rpx;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    background: #1eaffe;
    border-radius: 10rpx;
    font-size: 22rpx;
}

.err {
    background: #ff6565;
}

.mask {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    padding-top: 70px;
}

.mask_container {
    background: #fff;
    border-radius: 10rpx;
    width: 650rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 30rpx;
}

.answer_container {
    width: 590rpx;
    height: 430rpx;
    overflow-y: scroll;
    margin: 50rpx auto 40rpx auto;
    border: 6rpx #fec80e solid;
    border-radius: 10rpx;
}

.answer_btn {
    padding: 50rpx 0;
    display: flex;
    justify-content: space-around;
    border-top: 3rpx #fec80e dashed;
}

.btn-item {
    display: flex;
    align-items: center;
}

.icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

.question {
    width: 100%;
}

.select_question {
    margin: 30rpx auto;
    display: flex;
    justify-content: space-around;
}

.previous, .next {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    background: linear-gradient(#ffc948, #ffc948);
    box-shadow: 0rpx 18rpx 40rpx 0rpx rgba(33, 36, 75, 0.16);
}

.close {
    /* width: 200rpx; */
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
    margin: 30rpx auto 10rpx auto;
    font-size: 24rpx;
}
