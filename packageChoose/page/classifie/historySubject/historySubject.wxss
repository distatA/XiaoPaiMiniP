page {
    background: #f2f2f2;
}

.menu {
    border-top: 1px solid transparent; 
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-around;
    background: #22d8d9;
    color: #fff;
    font-size: 28rpx;
}
.title-img{
    margin-top: 25rpx;
    width: 54rpx;
    height: 54rpx;
}
.choose{
     height: 126rpx;
    display: flex;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 26rpx 0;
}
.menu-item-on {
    font-size: 36rpx;
}
.main{
    box-sizing: border-box;
    padding: 0 30rpx;
}
.content{
    width: 100%;
    height: 200rpx;
    background: #ffff;
    margin-top: 20rpx;
    position: relative;
    padding: 30rpx;
     box-sizing: border-box;
     border-radius: 10rpx
}
.course{
     width: 80rpx;
    height: 36rpx;
    display: inline;
   background: #fed2cd;
   border: 1px solid #fe7666;
   font-size: 26rpx;
   color: #fe7666;
   border-radius: 2rpx 10rpx 2rpx 10rpx;
   margin-right: 20rpx;
}
.title{
    display: inline;
    font-size: 34rpx;
    line-height: 50rpx;
    font-weight: bold;
}
.time{
   position: absolute;
   bottom: 30rpx;
   right: 30rpx;
   color: #a9a9a9;
   font-size: 26rpx;
}
.header {
    width: 100%;
    text-align: center;
    line-height: 68rpx;
    background: #22d8d9;
    color: #fff;
    font-size: 28rpx;
    border-radius: 30rpx;
}

.nav-con{
  width: 208rpx;
    height: 68rpx;
    background: #e6e6e6;
    border-radius:30rpx;
    text-align: center;
    line-height: 68rpx; 
}
._noPost{
    text-align: center;
   position: relative;
}
.no-data{
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: 350rpx;
    left: 0;
    right: 0;
    margin: auto;
}

.school-item{
    display: flex;
    margin-top: 20rpx;
    height: 160rpx;
    background: #fff;
    position: relative;
}
.school-logo{
    width: 110rpx;
    height: 110rpx;
    margin-top: 26rpx;
    border-radius: 55rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}
.school-name{
    font-size: 30rpx;
    margin: 20rpx 0 5rpx 0;
}
.flex{
    display: flex;
    margin-top: 10rpx;
}
.info-item{
    width: 270rpx;
    font-size: 24rpx;
    color: #a9a9a9;
    margin-bottom: 10rpx;
}
.school-hot{
    position: absolute;
    top: 25rpx;
    right: 30rpx;
    color: #ffbb29;
    font-size: 24rpx;
}
.befor{
   width: 60rpx;
    height: 40rpx;
    background: #ff7373;
    color: #fff;
    font-size: 24rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 40rpx;
    margin-right: 10rpx;
}
.counterpart{
   width: 60rpx;
    height: 40rpx;
    background: #22d8d9;
    color: #fff;
    font-size: 24rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 40rpx;
    margin-right: 10rpx;
}