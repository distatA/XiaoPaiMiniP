/* pages/teach/teach.wxss */

.banner {
    width: 750rpx;
    height: 360rpx;
    background: url('https://new.schoolpi.net/attach/small_program/class/1.png') no-repeat;
    background-size: 100%;
}

.course {
    width: 690rpx;
    margin: 17rpx auto 10rpx;
    /* display: flex; */
}

.wrap {
    display: flex;
}

/* 课程 排行 */

.icon {
    line-height: 70rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    width: 47rpx;
    height: 58rpx;
}

.icon1 {
    background: url('https://new.schoolpi.net/attach/small_program/class/num1.png') no-repeat center;
    background-size: 100%;
}

.icon2 {
    background: url('https://new.schoolpi.net/attach/small_program/class/num2.png') no-repeat center;
    background-size: 100%;
}

.icon3 {
    background: url('https://new.schoolpi.net/attach/small_program/class/num3.png') no-repeat center;
    background-size: 100%;
}

.icon4 {
    background: url('https://new.schoolpi.net/attach/small_program/class/numother.png') no-repeat center;
    background-size: 100%;
}

.course-pic {
    width: 238rpx;
    height: 178rpx;
    border-radius: 4rpx;
    margin-left: 21rpx;
}

.course-value {
    width: 365rpx;
    height: 178rpx;
    margin-left: 18rpx;
}

.course-title {
    font-size: 34rpx;
    font-weight: bold;
    line-height: 51rpx;
    color: #383838;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.course-inf {
    font-size: 26rpx;
    line-height: 39rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.course-updata {
    font-size: 28rpx;
    color: #383838;
}

.course-updata text {
    font-size: 28rpx;
    line-height: 39rpx;
    color: #f00;
    opacity: 0.7;
}
