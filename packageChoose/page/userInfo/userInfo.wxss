page {
    background: #fff;
}

.info-form {
    margin: 30rpx 40rpx;
    padding-bottom: 180rpx;
}

.title {
    font-size: 42rpx;
    padding: 10rpx 0;
    font-weight: 700;
}

.tips {
    font-size: 24rpx;
    color: #ccc;
}

.sub-title {
    font-size: 32rpx;
    font-weight: 700;
    padding-top: 40rpx;
}

.info-item {
    display: flex;
    line-height: 120rpx;
    /* background: red; */
    border-bottom: 2rpx solid #ccc;
    position: relative;
}

.info-name {
    width: 180rpx;
    text-align: left;
    color: #636363;
    font-size: 30rpx;
}

.info-content {
    flex: 1;
    color: #8e8e8e;
    font-size: 28rpx;
    opacity: 0.5;
}

.arrow {
    position: absolute;
    line-height: 120rpx;
    right: 0;
    color: #c9c9c9;
}

.submit-btn {
    width: 100vw;
    height: 130rpx;
    background: #fff;
    position: fixed;
    bottom: 0;
    z-index: 9999;
    box-shadow: 4rpx 4rpx 10rpx #000;
}

.btn {
    margin: 25rpx 30rpx;
    height: 80rpx;
    background: #22d8d9;
    color: #fff;
    border-radius: 4rpx;
    line-height: 80rpx;
    text-align: center;
}

.email {
    height: 120rpx;
    line-height: 120rpx;
}
