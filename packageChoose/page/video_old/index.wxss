.content {
    padding-top: 64px;
    display: flex;
    flex-direction: column;
}

.video-wrap {
    flex: 1;
    position: relative;
}

.video {
    width: 100%;
    height: 100%;
}

.room {
    width: 160rpx;
    height: 65rpx;
    background: rgba(73, 219, 87);
    border-radius: 33px 0px 0px 33px;
    position: absolute;
    right: 0;
    top: 85rpx;
    font-size: 20rpx;
    line-height: 65rpx;
    letter-spacing: 1rpx;
    color: #fff;
    padding-left: 17rpx;
    box-sizing: border-box;
    text-align: center;
}

.info {
    width: 750rpx;
    height: 448rpx;
    background: rgba(60, 60, 60, 0.35);
    border-radius: 20rpx 20rpx 0rpx 0rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    color: #fff;
    font-size:22rpx;
    line-height: 60rpx;
    padding: 50rpx 0 0 35rpx;
    box-sizing: border-box;
    z-index: 999;
}
.info view{
    overflow: hidden;
    white-space:nowrap;
    width: 700rpx;
}
.title {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 25rpx;
}

.btn {
    height: 68rpx;
    background-color: #3c3c3c;
    display: flex;
}

.line {
    width: 2rpx;
    height: 44rpx;
    background: #fff;
    align-self: center;
}

.share, .collect {
    width: 50%;
    height: 68rpx;
    background-color: #3c3c3c;
    color: #fff;
    border-radius: 0;
    line-height: 68rpx;
    font-size: 24rpx;
    padding-left: 132rpx;
    display: flex;
}

.share image, .collect image {
    width: 35rpx;
    height: 35rpx;
    margin: auto 28rpx auto 0;
}
