.container-box {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    position: relative;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
}

#pusher {
    width: calc(323vmin / 7.5);
    height: calc(500vmin / 7.5);
}
.pptimg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
}
.pptimg-small {
    width: calc(900vmin / 7.5);
    height: calc(500vmin / 7.5);
    margin-right: calc(30vmin / 7.5);
}
.pptimg-small-wrap{
    /* width:calc(1253vmin / 7.5); */
    height: calc(500vmin / 7.5);
    margin: auto;
    display: flex;
}

.file-wrap {
    width: 100%;
    position: absolute;
    bottom: 0;
    z-index: 999;
}

.file-btn {
    display: block;
    content: '';
    border-right: 6px solid #22d8d9;
    border-bottom: 6px solid #22d8d9;
    width: 23px;
    height: 23px;
    border-radius: 4px;
    position: absolute;
    margin: 0 auto;
    left: 0;
    right: 0;
    top: -37px;
    transform: rotate(225deg);
}

@keyframes tomove {
    from {
        transform: rotate(225deg);
    }

    to {
        transform: rotate(45deg);
    }
}

@keyframes backmove {
    from {
        transform: rotate(45deg);
    }

    to {
        transform: rotate(225deg);
    }
}

.file-value {
    width: 100%;
    height: 82px;
    z-index: 999;
    background-color: rgba(0, 0, 0, 0.65);
    padding-left: 6px;
}

.scroll-view_x {
    white-space: nowrap;
    height: 82px;
}

.value-item {
    width: 116px;
    height: 65px;
    margin: 8px 10px 8px 0;
}

.topbar {
    position: absolute;
    top: calc(20vmin / 7.5);
    left: calc(20vmin / 7.5);
    z-index: 999;
}

