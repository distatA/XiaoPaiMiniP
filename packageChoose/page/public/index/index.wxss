page {
    /* font-family:"Ping Fang font"; */
    color: #333;
    background: #f2f2f2;
}

.school-photo {
    height: 560rpx;
    box-shadow: 2px 4px 6px #ccc;
    position: relative;
}

.school-photo image {
    width: 100%;
    height: 100%;
}

.vr-text-tip {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    z-index: 9;
    color: #fff;
    font-size: 28rpx;
    width: 170rpx;
    height: 40rpx;
    background: rgba(0, 0, 0, 0.4);
    padding: 0 10rpx;
    line-height: 40rpx;
    border-radius: 10rpx;
}

.top {
    width: 100%;
    height: 560rpx;
    margin: 0 auto;
}

.slide-image {
    width: 100%;
    height: 560rpx;
}

.img_box {
    width: 93%;
    height: 480rpx;
    margin: 0 auto;
}

.schl {
    width: 100%;
    height: 140rpx;
    background: #fff;
    padding-top: 20rpx;
}

.schl view {
    float: left;
}

.schl_img {
    width: 24%;
    height: 120rpx;
}

.schl_name {
    width: 70%;
    /* height: 120rpx; */
    font-size: 40rpx;
    color: #000;
    padding-top: 24rpx;
    /* line-height: 120rpx; */
}

.schl_bq_boxx {
    width: 100%;
    background: #fff;
}

.schl_bq {
    height: 40rpx;
    line-height: 120rpx;
    padding-left: 16rpx;
}

.schl_bq view {
    float: left;
}

.schl_time {
    height: 34rpx;
    font-size: 24rpx;
    color: #ffae28;
    line-height: 34rpx;
    border: 1rpx solid #ffae28;
    background: #fff;
    border-radius: 51rpx;
    text-align: center;
    margin-left: 14rpx;
    padding: 0 15rpx;
}

.schl_ceng {
    width: 26%;
    height: 34rpx;
    font-size: 20rpx;
    color: #ffae28;
    line-height: 34rpx;
    border: 1rpx solid #ffae28;
    background: #fff;
    border-radius: 51rpx;
    text-align: center;
    margin-left: 15rpx;
}

.schl_zong {
    width: 16%;
    height: 34rpx;
    font-size: 20rpx;
    color: #ffae28;
    line-height: 34rpx;
    border: 1rpx solid #ffae28;
    background: #fff;
    border-radius: 51rpx;
    text-align: center;
    margin-left: 15rpx;
}

.schl_du {
    width: 14%;
    height: 34rpx;
    font-size: 20rpx;
    color: #ffae28;
    line-height: 34rpx;
    border: 1rpx solid #ffae28;
    background: #fff;
    border-radius: 51rpx;
    text-align: center;
    margin-left: 15rpx;
}

.jianjie {
    width: 100%;
    height: 120rpx;
    background: #fff;
}

.jianjie view {
    float: left;
}

.jianjie_l {
    width: 46%;
    height: 120rpx;
    padding-left: 30rpx;
}

.jianjie_r {
    width: 46%;
    height: 120rpx;
}

.jianjie_l_t {
    height: 50rpx;
    font-size: 28rpx;
    color: #000;
    line-height: 50rpx;
    margin-top: 10rpx;
}

.jianjie_l_b {
    height: 50rpx;
    font-size: 28rpx;
    color: #000;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.gradis {
    width: 100%;
    height: 360rpx;
    margin-top: 10rpx;
    background: #fff;
    padding-top: 30rpx;
    margin-bottom: 10rpx;
}

gradis view {
    float: left;
}

.gradis_l_box {
    width: 100vw;
    height: 360rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.gradis_l_box>view {
    float: left;
    margin: 0 10rpx;
}

.gradis_l {
    width: 17%;
    height: 160rpx;
    display: flex;
    justify-content: center;
}

.gradis_l_t {
    width: 100%;
    height: 160rpx;
}

.gradis_l_t_t {
    width: 96rpx;
    height: 96rpx;
    margin: 0 auto;
}

.gradis_l_t_b {
    width: 100%;
    height: 50rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 50rpx;
}

/* 新闻列表 */

.news {
    background-color: #fff;
}

.single-item, .triple-item ,.double-item,.nopic-item{
    border-bottom: 1rpx solid #ccc;
}
.single-item {
    display: flex;
}

.single-info {
    padding-left: 30rpx;
    width: 60%;
}

.single-title {
    font-size: 30rpx;
    height: 170rpx;
    margin-top: 20rpx;
}

.single-img {
    width: 300rpx;
    height: 220rpx;
    margin: 20rpx 40rpx;
}

.single-time, .triple-time,.double-time,.nopic-time {
    font-size: 24rpx;
    line-height: 80rpx;
    color: #999;
}

.triple-item ,.nopic-item,.double-item{
    padding: 20rpx 30rpx 0 30rpx;
}

.triple-title {
    font-size: 30rpx;
}

.triple-content,.double-content {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.triple-img {
    width: 226rpx;
    height: 146rpx;
}
.double-img{
    width: 330rpx;
    height: 200rpx;
}
.nopic-title,.double-title{
    font-size: 30rpx;
}
