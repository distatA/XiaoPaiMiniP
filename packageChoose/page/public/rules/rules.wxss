.commentArea {
    background: #fafafa;
    border-top: #e5e5e5 1px solid;
    box-shadow: 5px -5px 1px 1px #000;
    height: 300px;
    overflow: hidden;
}

.wrap2 {
    width: 90%;
    margin: 0 auto;
}

.ucmtbox {
    margin-top: 80rpx;
    overflow: hidden;
}

.ucmtbox .thumb {
    width: 90rpx;
    height: 90rpx;
}

.ucmtbox .thumb image {
    width: 90rpx;
    height: 90rpx;
}

