/* pages/news/details.wxss */

body {
    font-family: PingFangSC-Regular, "Droid Sans", Arial, sans-serif;
}

/* 使图片居中 */

.wxParse-span .wxParse-inline {
    text-align: none !important;
    text-indent: 0 !important;
}

.wrap {
    width: 92%;
    margin: 0 auto;
    background: #fff;
}

.title {
    line-height: 80rpx;
    font-size: 45rpx;
    color: #444;
    padding: 40rpx 0;
}

.content {
    color: #878787;
    font-size: 32rpx;
    line-height: 46rpx;
    padding: 20rpx 10rpx;
}

