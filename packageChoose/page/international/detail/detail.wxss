    width: 70rpx;
    height: 70rpx;
}

.video-time {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    font-size: 22rpx;
    color: #fff;
}

.school-info {
    margin-top: 20rpx;
    padding: 30rpx 20rpx 50rpx;
    text-align: center;
    font-size: 30rpx;
    background: #fff;
    line-height: 80rpx;
    border-bottom: 1px #ccc dashed;
}

.school-name {
    font-size: 40rpx;
    line-height: 80rpx;
}

.school-ename {
    color: #a7a7a7;
}

.school-address {
    color: #888;
    position: relative;
}

.address-icon {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    background: red;
    top: 0;
    left: 0;
}

.ranking {
    font-size: 36rpx;
    color: #333;
    line-height: 80rpx;
    padding-top: 30rpx;
}

.area-rank {
    color: #888;
    line-height: 40rpx;
    padding-bottom: 50rpx;
}

.school-intro {
    line-height: 50rpx;
    color: #a4a4a4;
}

