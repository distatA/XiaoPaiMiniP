    border-bottom: 1px #ddd dashed;
}

.view-major {
    padding: 20rpx 0;
    text-align: center;
    color: #888;
    font-size: 28rpx;
    background: #fff;
}

.button {
    width: 80vw;
    line-height: 80rpx;
    text-align: center;
    background: #22d9d9;
    color: #fff;
    font-size: 36rpx;
    border-radius: 30rpx;
    margin: 40rpx auto;
}

.apply {
    background: #fff;
    margin: 50rpx 0;
}

.apply-button {
    width: 80vw;
    line-height: 80rpx;
