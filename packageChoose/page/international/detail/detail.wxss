.video-banner {
    height: 450rpx;
}

video {
    width: 100vw;
}

.video-title {
    position: relative;
    line-height: 90rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    background: #fff;
    border-bottom: 1px #ddd solid;
}

.fav {
    position: absolute;
    top: 0;
    right: 30rpx;
    width: 40rpx;
    height: 40rpx;
    color: red;
}

.video-list {
    display: -webkit-box;
    overflow-x: scroll;
    background: #fff;
    border-bottom: 1px #cdcdcd solid;
}

.video-item {
    width: 200rpx;
    height: 150rpx;
    margin: 40rpx 20rpx;
    position: relative;
}

.shadow {
    position: absolute;
    width: 200rpx;
    height: 150rpx;
