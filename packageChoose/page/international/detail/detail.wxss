    background: #22d9d9;
    color: #fff;
    font-size: 36rpx;
    border-radius: 30rpx;
    margin: 40rpx auto;
}

/* 弹框 */

.popup {
    width: 100%;
    height: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}

.mask {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
}

.hide {
    display: none;
}

.hiden {
    display: none;
}

.close {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 12%;
    top: 26%;
    z-index: 99999;
}

image {
    width: 100%;
    height: 100%;
}

.form {
    background: #fff;
    width: 500rpx;
    position: absolute;
    right: 0;
    left: 0;
    margin: 0 auto;
    top: 26%;
    z-index: 99999;
    border-radius: 20rpx;
}

.form-title {
    text-align: center;
    padding: 30rpx 0;
    font-size: 40rpx;
}

.form-button {
    display: flex;
    margin-bottom: 40rpx;
    justify-content: space-around;
}

input {
