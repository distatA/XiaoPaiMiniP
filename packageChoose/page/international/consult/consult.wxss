.item {
    width: 95vw;
    margin: 0 auto;
    box-shadow: 0rpx 0rpx 20rpx #ccc;
    font-size: 30rpx;
    border-radius: 10rpx;
    position: relative;
    margin-top: 40rpx;
    box-sizing:border-box;

}

image {
    width: 100%;
    height: 100%;
}

.back-img {
    height: 300rpx;
    box-sizing: border-box
}

.title {
    padding: 50rpx 20rpx 10rpx;
    color: #383838;
}

.tips {
    color: #888;
    padding-left: 20rpx;
}

.price {
    padding: 40rpx 20rpx;
    font-size: 40rpx;
    color: #ff6d6d;
}
._person{
    line-height: 80rpx;
}
.consult {
    display: flex;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    background: #22d9d9;
    color: #fff;
    padding: 0 25rpx;
    border-radius: 50rpx;
    font-size: 22rpx;
}

.line {
    width: 1px;
    border-right: 1px #fff solid;
    margin: 26rpx 20rpx;
}

.button {
    font-size: 30rpx;
   width: none;
   line-height: none;
}
.noPost{
  margin-top: 20rpx;
  text-align: center;
}


