.score-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* padding-bottom: 30rpx; */
}
.score-content {
    padding: 50rpx;
    text-align: center;
}

.min_score {
    border: 7rpx solid;
    border-radius: 40rpx;
    padding: 20rpx 40rpx;
    border-top-color: #4ecfd2;
    border-bottom-color: #4ecfd2;
    border-right-color: #5db0ec;
    border-left-color: #3defb8;
    /* border-image: linear-gradient(90deg, #3df0b7 0%, #5fafed 100%);
    border-image-slice: 1; */
}

.nums {
    font-size: 48rpx;
    color: #292621;
}

.nums-text {
    font-size: 24rpx;
    color: #8b8170;
}

.score-title {
    background-color: #fff;
    border: solid 3rpx #dedede;
    border-radius: 30rpx;
    padding: 15rpx 30rpx;
    margin: 50rpx 0;
}

.score-title:nth-child(1) {
    color: #727272;
}

.score-title:nth-child(2) {
    color: #4ad7cc;
}
.score-column{
    padding: 20rpx 0;
    border-top: 2rpx solid #e9e9e9;
}
.score-column:last-child{
    
    border-bottom: 2rpx solid #e9e9e9;
}
.score-item-name {
    font-size: 26rpx;
    color: #727272;
}

.score-item-left {
    color: #727272;
    opacity: 0.5;
    font-size: 50rpx;
    padding-left: 60rpx;
}

.score-item-right {
    color: #46dfc5;
    font-size: 50rpx;
    padding-right: 60rpx;
}
.year-list{
    
    display: flex;
    margin-top: 30rpx;
    justify-content: space-around;

}
.year-item{
    color: #acacac;
    font-size: 40rpx;
}
.on{
    color: #48dcc8
}