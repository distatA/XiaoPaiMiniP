@import "school_info/school_info.wxss";
@import "fenshu/fenshu.wxss";
@import "zhuanye/zhuanye.wxss";
@import "luqu/luqu.wxss";

@media screen and (min-width: 700px) {
    .dialog-container {
        background-color: rgb(35, 35, 35);
        width: 100vw;
        height: 100vh;
    }
    .school {
        display: table;
        background: rgba(0, 0, 0, .3);
        border-radius: 45rpx;
        padding: 10rpx 30rpx 10rpx 20rpx;
    }
    .school-logo {
        width: 70rpx;
        height: 70rpx;
        background-color: #ffffff;
        border-radius: 50%;
        margin-right: 10rpx;
        float: left;
        margin-top: 6rpx;
    }
    .school-name {
        line-height: 38rpx;
        display: flex;
        flex-direction: column;
    }
    .school-name1 {
        font-size: 30rpx;
        color: #ffffff;
        white-space: normal;
    }
    .school-name2 {
        font-size: 20rpx;
        color: #22d8d9;
    }
    .dialog {
        position: absolute;
        top: 150rpx;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: #ffffff;
        border-top-left-radius: 30rpx;
        border-top-right-radius: 30rpx;
        display: flex;
        flex-direction: column;
    }
    .dialog-header {
        padding: 40rpx 30rpx;
        height: auto;
        overflow: hidden;
        background-color: rgb(159, 232, 232);
        border-top-left-radius: 30rpx;
        border-top-right-radius: 30rpx;
    }
    .dialog-title {
        font-size: 36rpx;
        font-weight: bold;
        float: left;
        height: 36rpx;
        line-height: 36rpx;
    }
    .dialog-major-title{
        display: flex;
    }
    .dialog-title-name{
        flex:1;
        text-align: center;
    }
    .title-btn{
        width: 40rpx;
        height: 40rpx;
    }
    .dialog-tabs {
        float: left;
        display: flex;
        width: 300rpx;
    }
    .dialog-tabs .tabs-li {
        flex: 1;
        color: #b9b9b9;
    }
    .dialog-tabs .tabs-li.active {
        color: #000000;
    }
    .dialog-header image {
        display: block;
        float: right;
        width: 36rpx;
        height: 36rpx;
    }
    .title-btn-back {
        width: 18rpx!important;
        height: 36rpx;
    }
    .dialog-body {
        flex: 1;
        background-color: #fff;
    }
    /* 专业详情css */
    .major-detail-content{
        padding: 20rpx 40rpx;
        overflow-y: scroll;
    }
    .major-goal{
        display: flex
    }
    .major-goal view{
        margin-right: 20rpx;
    }
    .major-deatil-title{
        font-weight: 600;
        padding-top: 20rpx;
    }
    .aboutinfo {
        padding: 20rpx 30rpx;
    }
}

