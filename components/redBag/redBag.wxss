    width: 100%;
    height: 100%;
    position: relative;
}
.red-bag-tips{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 144rpx;
    text-align: center;
    font-size: 36rpx;
    color:#fff;
}
.red-bag-content{
     position: absolute;
    left: 0;
    right: 0;
    bottom: 60rpx;
    text-align: center;
    font-size: 20rpx;
    color:#EB3425;
}
.close{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    bottom: 280rpx;

}