/* 热门标签 */

.popular {
    width: 60rpx;
    height: 55rpx;
    position: absolute;
    top: 0;
    right: -10rpx;
    transform: translateY(3rpx);
    animation: popular 2s infinite;
}

@keyframes popular {
    0% {
        transform: translateY(3rpx);
    }

    50% {
        transform: translateY(-3rpx);
    }
    100%{
        transform: translateY(3rpx);
    }
}

