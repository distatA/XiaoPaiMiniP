}

.close {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 335rpx;
    bottom: 40rpx;
    border: 2rpx solid #fff;
    border-radius: 50%;
    z-index: 9999;
}

.close::before, .close::after {
    content: "";
    position: absolute;
    height: 30rpx;
    width: 3rpx;
    top: 6rpx;
    left: 0;
    margin: 0 auto;
    right: 0;
    background: #fff;
}

.close::before {
    transform: rotate(45deg); /*进行旋转*/
}

.close::after {
    transform: rotate(-45deg);
}

