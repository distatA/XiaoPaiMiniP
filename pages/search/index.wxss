/* pages/search/index.wxss */

.header {
    box-sizing: border-box;
    width: 100%;
    height: 327rpx;
    background-image: url(https://new.schoolpi.net/attach/small_program/search/search_back.jpg);
    text-align: center;
    padding: 80rpx 35rpx 40rpx 35rpx;
}

.search-text {
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
}

.search {
    width: 100%;
    position: relative;
    z-index: 10;
    font-size: 26rpx;
}

.search-input {
    margin-top: 60rpx;
    height: 80rpx;
    background: #fff;
    border-radius: 10rpx;
    border: 0;
}

.search-logo {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto 0;
    left: 160rpx;
}

.main {
    width: 100%;
    height: 400rpx;
    box-sizing: border-box;
    padding: 40rpx;
}

._host-search {
    height: 40rpx;
    border-left: 10rpx solid #35eacb;
    line-height: 40rpx;
    font-size: 38rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.host-school {
    margin-top: 40rpx;
    width: 50%;
    float: left;
    font-size: 28rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.search-list {
    border: 1px solid #ccc;
    overflow: hidden;
    background-color: #fff;
    position: absolute;
    left: 100rpx;
    right: 40rpx;
    z-index: 9;
    border-radius: 10rpx;
}

.search-list-item {
    height: 60rpx;
    line-height: 60rpx;
    color: #000;
    font-size: 28rpx;
    padding-left: 20rpx;
    font-weight: bold;
}
