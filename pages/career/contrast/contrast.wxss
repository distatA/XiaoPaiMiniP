.school-list {
    display: flex;
    overflow-y: hidden;
    overflow-x: scroll;
    padding-left: 265rpx;
}

.top {
    width: 200rpx;
    height: 300rpx;
    text-align: center;
    position: relative;
    margin-bottom: 20rpx;
}

.school-logo {
    width: 120rpx;
    height: 120rpx;
    margin: 20rpx auto;
}

image {
    width: 100%;
    height: 100%;
}

.gailv {
    font-size: 38rpx;
    color: #35efd8;
}

.name {
    font-size: 24rpx;
    padding: 20rpx 0;
    overflow: hidden;
}

.bottom {
    width: 200rpx;
}
.menu {
    position: absolute;
    width: 265rpx;
    left: 0;
    top: 0;
    background: #fff;
}

.content-card-logo {
    width: 110rpx;
    height: 110rpx;
    margin: 20rpx auto;
}

.theader, .menu-theader {
    font-size: 26rpx;
    border-right: 1px solid #e3e9ec;
    padding: 10rpx 0;
}

.menu-theader {
    padding-left: 10rpx;
}

.spec {
    height: 320rpx;
}

.hitem {
    height: 70rpx;
    line-height: 70rpx;
}

.hitem-content {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
}

.deleteBtn {
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    right: 0;
    top: 0;
    display: flex;
}

.deleteBtn image {
    width: 100%;
    height: 100%;
}
