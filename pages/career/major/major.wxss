.header {
    background: #22d9d9;
    padding: 20rpx;
}

.seacher {
    width: 95%;
    height: 65rpx;
    border: 2rpx solid #fff;
    border-radius: 40rpx;
    margin: 0 auto;
    display: flex;
}

.seacher form {
    width: 100%;
}

.left-text {
    float: left;
    width: 20%;
    font-size: 27rpx;
    color: #fff;
    line-height: 2.5;
    text-align: center;
}

.line {
    float: left;
    width: 2rpx;
    height: 70%;
    background: #fff;
    margin-top: 10rpx;
}

.right-input {
    float: left;
    width: 58%;
    height: 100%;
    padding-left: 10rpx;
    font-size: 28rpx;
    color: #fff;
}

.s_btn {
    float: right;
    width: 10%;
    font-size: 50rpx;
    color: #fff;
    line-height: 1.3;
    text-align: center;
    background: none;
    padding: 0;
    position: absolute;
    right: 80rpx;
}

.content {
    position: relative;
}

.nav {
    display: flex;
    justify-content: center;
    padding-top: 20rpx;
    font-size: 32rpx;
    background: #f2f2f2;
    border-bottom: 1rpx solid #ccc;
}

.nav-title {
    padding: 10rpx;
    width: 30%;
    text-align: center;
    margin: 0 5%;
}

.nav-left-list {
    width: 30%;
}

.nav-active {
    background: #22d9d9;
    color: #fff;
}

.nav-bottom {
    border-bottom: 4rpx solid #22d9d9 !important;
    color: #22d9d9;
}

.left-list-box2 {
    height: 70rpx;
    font-size: 29rpx;
    text-align: center;
    border-bottom: 2rpx solid #ccc;
    line-height: 70rpx;
    background: #f9f9f9;
}

.left-list-box {
    font-size: 29rpx;
    text-align: left;
    line-height: 70rpx;
}

.left-list-three {
    height: 70rpx;
    font-size: 29rpx;
    text-align: left;
    border-bottom: 2rpx solid #ccc;
    border-left: 1rpx solid #ccc;
    line-height: 70rpx;
    background: #fff;
    padding: 0rpx 20rpx 0rpx 80rpx;
}

.nav-hot {
    padding: 0 16rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    text-align: center;
    overflow: hidden;
}

.nav-list-second {
    width: 70%;
    position: absolute;
    right: 0;
    top: 0;
}

.nav-content {
    position: relative;
}

.nav-right-list {
    width: 70%;
    position: absolute;
    right: 0;
    top: 0;
    background: #f2f2f2;
    z-index: 999;
}

.hiden {
    display: none;
}

.hidden {
    display: none;
}

.left-list-box-icon {
    font-size: 24rpx;
    float: right;
    color: #bcbcbc;
    line-height: 60rpx;
    padding-right: 20rpx;
}

.catename2 {
    display: block;
    height: 70rpx;
    line-height: 70rpx;
    width: 100%;
    padding-left: 80rpx;
    border-bottom: 2rpx solid #ccc;
    border-left: 1rpx solid #ccc;
}

swiper {
    height: 100%;
}

.currbox .hiden {
    display: block;
}

.currbox2 .hidden {
    display: block;
}

.scroll-content {
    height: 100%;
}

button {
    width: 30px !important;
}
