page {
    background-color: #fafafa;
}

.banner {
    width: 710rpx;
    height: 370rpx;
    margin: 14rpx auto 0;
}

.banner image {
    width: 100%;
    height: 100%;
    border-radius: 28rpx;
}

.nav {
    display: flex;
    margin: 40rpx;
    justify-content: space-between;
}

.nav-item {
    width: 207rpx;
    height: 159rpx;
    background: #fff;
    box-shadow: 0rpx 3rpx 24rpx 0rpx rgba(0, 0, 0, 0.06);
    border-radius: 28rpx;
}

.nav-item image {
    display: block;
    width: 64rpx;
    /* width: 124rpx; */
    height: 64rpx;
    /* height: 124rpx; */
    border-radius: 50%;
    margin: 24rpx auto 0;
}

.nav-title {
    font-size: 26rpx;
    font-weight: bold;
    color: #222;
    text-align: center;
    margin-top: 16rpx;
    letter-spacing: 2rpx;
}

.title {
    display: flex;
    justify-content: space-between;
    /* margin: 85rpx 77rpx 0 43rpx; */
    margin: 85rpx 77rpx 40rpx 43rpx;
}

.hot {
    font-size: 32rpx;
    font-weight: bold;
    color: #111;
    line-height: 32rpx;
}

.more {
    font-size: 24rpx;
    font-weight: bold;
    color: #7ea2ff;
    line-height: 32rpx;
    position: relative;
}

.more::after {
    content: '';
    display: block;
    width: 12rpx;
    height: 12rpx;
    border-right: 5rpx solid #000;
    border-bottom: 5rpx solid #000;
    transform: rotate(-45deg);
    position: absolute;
    top: 0;
    bottom: 0;
    right: -40rpx;
    margin: auto 0;
}

.school_box {
    /* display: -webkit-box; */
    /* overflow-x: scroll; */
    display: flex;
    flex-wrap: wrap;
    /* justify-content: space-between; */
    justify-content: flex-start;
    padding-left: 38rpx;
    padding-right: 38rpx;
}

.school-item {
    /* width: 260rpx; */
    width: 213rpx;
    /* height: 360rpx; */
    height: 317rpx;
    background: #fff;
    box-shadow: 0px 3rpx 79rpx 0rpx rgba(0, 0, 0, 0.1);
    border-radius: 16rpx;
    /* margin: 53rpx 32rpx 60rpx 0; */
    margin-left: 13rpx;
    margin-bottom: 40rpx;
    padding-left: 16rpx;
    box-sizing: border-box;
}

.school-item image {
    width: 100rpx;
    height: 104rpx;
    border-radius: 19rpx;
    margin-top: 22rpx;
}

.school-name {
    font-size: 24rpx;
    font-weight: bold;
    color: #000;
    margin-top: 27rpx;
}

.school-inf {
    font-size: 18rpx;
    font-weight: 400;
    color: #888;
    margin-top: 18rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.btn {
    width: 90rpx;
    height: 36rpx;
    background: #39e1e7;
    border-radius: 18rpx;
    font-size: 16rpx;
    line-height: 36rpx;
    color: #fff;
    margin-top: 23rpx;
    position: relative;
    padding-left: 10rpx;
    box-sizing: border-box;
}

.btn::after {
    content: '';
    display: block;
    width: 7rpx;
    height: 7rpx;
    border-right: 2rpx solid #fff;
    border-bottom: 2rpx solid #fff;
    transform: rotate(-45deg);
    position: absolute;
    top: 0;
    bottom: 0;
    right: 18rpx;
    margin: auto 0;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

/* swiper指示点 */

.wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 0rpx;
    float: left;
    text-align: center;
}

.wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: #fff;
    border-radius: 15rpx;
    border: 0rpx;
}

.wx-swiper-dot.wx-swiper-dot {
    width: 15rpx;
    height: 15rpx;
    border-radius: 15rpx;
    background: #fff;
}

.wx-swiper-dot.wx-swiper-dot-active {
    width: 22rpx;
    height: 15rpx;
    background: rgba(0, 255, 255);
    border-radius: 6rpx;
}
