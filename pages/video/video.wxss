page {
    margin-bottom: 20rpx;
    background-color: rgba(0, 0, 0, 0.8);
}

.videoItem {
    width: 90vw;
    margin: 0 auto;
    margin-top: 20rpx;
    padding: 20rpx;
    border-top: none;
    position: relative;
    background: #000;
    border-radius: 10rpx;
}

video {
    width: 100%;
    height: 210px;
}

.video {
    width: 100%;
}

.coverImg {
    position: relative;
    width: 100%;
    height: 205px;
}

.playImg {
    position: absolute;
    top: 38%;
    left: 42%;
    width: 100rpx;
    height: 100rpx;
    z-index: 100;
}

.title {
    color: rgb(153, 153, 153);
    font-size: 30rpx;
    line-height: 50rpx;
    height: 50rpx;
    overflow: hidden;
}

.btbox {
    overflow: hidden;
    color: rgb(153, 153, 153);
    font-size: 24rpx;
    padding-right: 10rpx;
    margin-top: 20rpx;
}

.fenxiang {
    background: none;
    width: 68rpx;
    height: 60rpx;
    color: rgb(153, 153, 153);
    text-align: center;
    line-height: 60rpx;
    margin-top: -6rpx;
}

.fx_tit {
    padding-top: 4rpx;
}

.btbox .right {
    line-height: 46rpx;
}

.gk {
    font-size: 50rpx;
    margin-left: 10rpx;
}

.pl {
    font-size: 40rpx;
    margin-left: 10rpx;
}

.popup {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 10rpx;
}
