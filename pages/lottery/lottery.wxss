/* 口罩活动 */

.masks {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 99;
}

.masks-contain {
    margin: 100rpx auto 0 auto;
    position: relative;
    top: 100rpx;
    width: 550rpx;
    height: 650rpx;
    box-sizing: border-box;
}

.mask-btn {
    width: 190rpx;
    height: 70rpx;
    position: relative;
    bottom: 165rpx;
    left: 180rpx;
}

.mask-btn button {
    width: 250rpx;
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
}

.close-masks {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 250rpx;
    bottom: -65rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
    z-index: 9999;
}

.close-masks::before, .close-masks::after {
    content: "";
    position: absolute;
    height: 30rpx;
    width: 5rpx;
    top: 6rpx;
    left: 0;
    margin: 0 auto;
    right: 0;
    background: #fff;
}

.close-masks::before {
    transform: rotate(45deg); /*进行旋转*/
}

.close-masks::after {
    transform: rotate(-45deg);
}

