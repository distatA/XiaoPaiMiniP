/* pages/school/screen/screen.wxss */

page {
  background: #efefef;
}

.header {
  height: 80rpx;
  background: #22d9d9;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.header-title {
  font-size: 28rpx;
  color: #fff;
  padding-top: 20rpx;
}

.header-flex {
  display: flex;
}

.header-title-icon {
  font-size: 32rpx;
  color: #fff;
  line-height: 2.6;
  padding-left: 10rpx;
}

.list-box {
  width: 100%;
  height: 160rpx;
  display: block;
  float: left;
  margin-top: 30rpx;
  background: #fff;
}

.school-list-icon {
  float:left;
  height: 100%;
  padding: 0 10rpx;
  font-size: 60rpx;
  color: #fff;
  background: -webkit-linear-gradient(top, #22d9d9, #2aeab5);
  line-height: 3;
}

.school-list-center {
  float:left;
  height: 100%;
  width: 89%;
  background: #fff;
  display: block;
}

.school-list-logo {
  float:left;
  width: 130rpx;
  height: 130rpx;
  margin-top: 20rpx;
  padding: 0 15rpx;
}

.school-list-logo image {
  width: 100%;
  height: 100%;
}

.school-name {
  font-family: PingFang-SC-Regular;
  font-size: 27rpx;
  color: #323232;
  padding-top: 40rpx;
}

.school-name-type {
  font-family: PingFang-SC-Regular;
  font-size: 22rpx;
  color: #878787;
  padding-top: 5rpx;
}

.pl {
  padding-left: 8rpx;
}

.school-live {
  float:left;
  font-size: 22rpx;
  /* padding: 0 14rpx; */
  padding-top: 40rpx;
  color: #878787;
  width: 120rpx;
}

.add {
  float:left;
  width: 15%;
  text-align: center;
  padding: 0 10rpx;
  padding-top: 40rpx;
}

.add-icon {
  font-size: 44rpx;
  color: #e0e0e0;
  font-weight: 600;
}

.add-text {
  font-size: 24rpx;
  color: #878787;
}

.jiantou {
  float:right;
  font-size: 40rpx;
  color: #ddd;
  padding: 0 10rpx;
  padding-top: 40rpx;
}

.hiden {
  background: -webkit-linear-gradient(right, #22d9d9, #2aeab5);
  padding-left: 100rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.hiden-one {
  display: flex;
  font-size: 24rpx;
  color: #fff;
  padding-top: 24rpx;
}

.hiden-two {
  display: flex;  
  font-size: 24rpx;
  color: #fff;
  padding-top: 20rpx;
}

.pad-left {
  padding-left: 20rpx;
}

.hiden-three {
  font-size: 24rpx;
  color: #fff;
  padding: 15rpx 0;
  left: 10rpx;
  top: 23%;
  width:100rpx;
}

.three_box{
  display:flex;
  width: 100%;
  height: auto;
}

.hiden-three-text {
  line-height: 1.6;
  padding-left: 10rpx;
}

.dis-none {
  display: none;
}

.school-list-text {
  float:left;
  width: 49%;
}

.sArea {
  display: none;
  position: absolute;
  top: 80rpx;
  height: auto;
  line-height: 66rpx;
  background: #22d9d9;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  width: 0%;
  transition: width 2s;
  overflow: hidden;
}

.sArea view {
  float: left;
  width: 25%;
  text-align: center;
  overflow: hidden;
}

.show {
  display: block;
  width: 100%;
}

.yellow {
  color:yellow
}

.empty {
  background: #fff;
  padding: 30rpx;
  font-size: 30rpx;
  text-align: center
}

.listArea {
  display: block;
  width: 100%;
  overflow: hidden;
} 